		</dependency>
		<!-- 开启Spring cache -->
		<dependency>
			<groupId>org.springframework.boot</groupId>
			<artifactId>spring-boot-starter-cache</artifactId>
		</dependency>
		<!-- thymeleaf -->
		<dependency>
